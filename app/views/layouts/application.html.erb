  <meta name="keywords" content="PS3, PS4, Xbox, Xbox One, Console, Game, HD, Blu-ray, 3D, đầu phát blu-ray, đầu phát hd, thuê máy game, thuê ổ cứng">
  <meta name="description" content="Dịch vụ giải trí tại nhà HTE, cho thuê máy PS3, PS4, Xbox, Xbox One; cho thuê ổ cứng phim HD">
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    'site', media: 'all', "data-turbolinks-track" => true %>
  <%= javascript_include_tag 'application', "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
