</head>
<body>
  <div id="fb-root"></div>
  <div id="primary-content">
    <div class="container_15" id="wrapper">
      <div id="main-content">
        <%= render 'header' %>
        <div id="pre-order"><%= link_to image_tag('pre_order_now.png'), dat_hang_truoc_ps4_path %></div>
        <div id="content">
          <%= render 'messages' %>
          <%= yield %>
        </div>
        <%= render 'footer' %>
      </div>
    </div>
  </div>
  <%= yield :page_js %>
</body>
</html>
